<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_job"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:background="@color/gray"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="148dp"
       android:layout_marginTop="6dp"
       android:layout_marginBottom="6dp"
       android:background="@color/white"
       >
    <com.woniukeji.jianmerchant.widget.CircleImageView
        android:id="@+id/circleimg_head"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/default_head"
        />
       <LinearLayout
           android:id="@+id/ll_user_info"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/circleimg_head"
           android:layout_marginTop="19dp"
           android:layout_marginLeft="10dp"
           >
           <TextView
               android:id="@+id/tv_user_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14dp"
               android:textColor="#000000"
               android:text="小李"
               android:gravity="center_vertical"
               />
           <ImageView
               android:id="@+id/img_sex"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@mipmap/icon_jing"
               android:layout_marginLeft="8dp"
               />
       </LinearLayout>



       <TextView
           android:id="@+id/tv_school_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/ll_user_info"
           android:layout_toRightOf="@+id/circleimg_head"
           android:layout_marginTop="12dp"
           android:layout_marginLeft="10dp"
           android:textSize="12dp"
           android:textColor="#666666"
           android:text="青州学院"
           />
       <TextView
           android:id="@+id/tv_finish_job_count"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_school_name"
           android:layout_toRightOf="@+id/circleimg_head"
           android:layout_marginTop="12dp"
           android:layout_marginLeft="10dp"
           android:textSize="12dp"
           android:textColor="#666666"
           android:text="共完成0次兼职，取消0次"
           />
<ImageView
    android:layout_below="@+id/tv_finish_job_count"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginTop="13dp"
    android:background="#bfbfbf"
    />
       <TextView
           android:id="@+id/tv_publish_date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginTop="18dp"
           android:layout_marginRight="15dp"
           android:textSize="10dp"
           android:textColor="#BFBFBF"
           android:text="2016.04.01 18:00"
           />
       <TextView
           android:id="@+id/tv_credit_info"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_publish_date"
           android:layout_alignParentRight="true"
           android:layout_marginTop="17dp"
           android:layout_marginRight="15dp"
           android:textSize="12dp"
           android:textColor="#666666"
           android:text="信用合格"
           />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="42dp"
           android:layout_alignParentBottom="true"
           android:orientation="horizontal"
           >
           <TextView
               android:id="@+id/tv_author_info"
               android:layout_weight="3"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:text="评分 4.4"
               android:layout_marginLeft="15dp"
               android:gravity="center_vertical"
               />
           <Button
               android:id="@+id/btn_cancel"
               android:layout_weight="0.7"
               android:layout_width="0dp"
               android:layout_height="26dp"
               android:layout_marginRight="15dp"
               android:textSize="12dp"
               android:textColor="@color/white"
               android:background="@drawable/button_sign_backound_yellow"
               android:text="暂不录取"
               />
           <Button
               android:id="@+id/btn_confirm"
               android:layout_weight="0.7"
               android:layout_width="0dp"
               android:layout_height="26dp"
               android:layout_marginRight="15dp"
               android:textSize="12dp"
               android:textColor="@color/white"
               android:visibility="gone"
               android:background="@drawable/button_sign_background_red"
               android:text="确认录取"
               />

       </LinearLayout>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:background="#bfbfbf"
           android:layout_alignParentTop="true"
           />
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:background="#bfbfbf"
           android:layout_alignParentBottom="true"
           />
   </RelativeLayout>
</RelativeLayout>
