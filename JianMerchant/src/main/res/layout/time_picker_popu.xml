<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_root_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/transparent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dialog_bg"
        android:gravity="center"

        >

    <LinearLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:gravity="center"

        >

        <com.woniukeji.jianmerchant.widget.time.PickerDateView
            android:id="@+id/year_pv"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            />

        <com.woniukeji.jianmerchant.widget.time.PickerView
            android:id="@+id/month_pv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/year_pv" />

        <com.woniukeji.jianmerchant.widget.time.PickerView
            android:id="@+id/day_pv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/month_pv" />




    </LinearLayout>
    <TextView
        android:id="@+id/tv_no"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#9B9B9B" />
    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/app_bg" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color"
        android:layout_marginTop="74dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="74dp"
        />
</RelativeLayout>
</RelativeLayout>
