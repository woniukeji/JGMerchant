<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_btn_bg_color"
              android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
   <include
       layout="@layout/app_title_bar"
       />
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
       />
    <Button
        android:id="@+id/button"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasong"
android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/rl_school"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        >

        <com.woniukeji.jianmerchant.widget.CircleImageView
            android:id="@+id/circle_talk_head03"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_tongzhi"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/circle_talk_head03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="通知"
                android:textSize="14dp"
                android:textColor="@color/app_bg"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="暂无通知"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="#9B9B9B"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9B9B9B"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:text="3月2号"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_btn_bg_color"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
        >

        <com.woniukeji.jianmerchant.widget.CircleImageView
            android:id="@+id/circle_talk_head04"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"

            android:src="@mipmap/icon_tixing"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/circle_talk_head04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_nick01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="提醒"
                android:textSize="14dp"
                android:textColor="@color/app_bg"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_content01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="暂无提醒"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="#9B9B9B"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_date01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9B9B9B"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:text="3月2号"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_btn_bg_color"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <com.woniukeji.jianmerchant.widget.FixedRecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/talk_const_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.woniukeji.jianmerchant.widget.FixedRecyclerView>


</LinearLayout>
