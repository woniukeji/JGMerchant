<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <LinearLayout
        android:id="@+id/ll_jobname"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >
   <TextView
       android:layout_weight="1"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:id="@+id/tv_job_name"
       android:gravity="center|left"
       android:textSize="14dp"
       android:layout_marginLeft="15dp"
       />
        <TextView
            android:id="@+id/tv_job_date"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4月1号"
            android:textColor="#bfbfbf"
            android:textSize="10dp"
            android:gravity="center|right"
            android:paddingRight="15dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_jobinfo"
        android:layout_below="@+id/ll_jobname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_title_sum"
            android:gravity="center|left"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"

            />
        <TextView
            android:id="@+id/tv_job_wages"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#f87c7c"
            android:textSize="12dp"
            android:gravity="center|right"
            android:paddingRight="15dp"
            />
        <Button
            android:id="@+id/btn_change_wages"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:background="@drawable/btn_gray_bg"
            android:text="修改"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_bott"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >

        <CheckBox
            android:id="@+id/ch_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/app_bg"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/ch_all"
            android:textColor="@color/app_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选中当前页"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            />

           <Button
               android:id="@+id/btn_pay_wages"
               android:layout_width="111dp"
               android:layout_height="match_parent"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:background="@drawable/button_calculate"
               android:text="确认结算"
               />
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_pay_wages"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            >
            <TextView
                android:id="@+id/tv_wages_sum"
                android:textColor="@color/app_bg"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="合计：000元"
                android:textSize="12dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_choose_sum"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="选中0人"
                android:gravity="center_vertical"
                />

        </LinearLayout>
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@+id/ll_jobinfo"
        android:layout_above="@+id/rl_bott"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/null_content"
                layout="@layout/null_content" />
            <ui.EmptyRecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/transparent"
                android:overScrollMode="never"
                android:scrollbarStyle="outsideOverlay" />

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>
